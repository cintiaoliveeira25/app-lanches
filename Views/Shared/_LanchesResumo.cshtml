@model Lanche


<div class="col-md-4 col-sm-4 col-lg-4">
    <img src="@Model.ImagemUrl" class="card-img-top imageLanche" alt="@Model.Nome" />
    <div class="figure-caption">
        <h4 class="formPullRightButton">@Model.Preco.ToString("c")</h4>
        <h4>
            <!-- Chamando a view Details do controlador Lanche e passando o Id do lanche.
                No controlador LancheController ele vai receber o Id e chamar a view Details.-->
            <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.Nome</a>
        </h4>
        <h6>@Model.DescricaoCurta</h6>
    </div>
    <div text-right">
        <p class="formPullRightButton">
            <a class="btn btn-primary" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                Adicionar ao Carrinho
            </a>
        </p>
    </div>
</div>